# Server
PORT=5001
NODE_ENV=production

# MongoDB Atlas connection string
MONGODB_URI=mongodb+srv://<user>:<password>@<cluster>.mongodb.net/?appName=ctf

# JWT — generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=replace_with_a_64_byte_hex_secret

# Groq API key (https://console.groq.com)
GROQ_API_KEY=gsk_replace_with_your_groq_api_key

# Comma-separated list of allowed frontend origins (no trailing slash)
# In Docker: http://localhost   In production: https://yourdomain.com
FRONTEND_URL=http://localhost

# URL shown in password-reset emails — must match where users access the frontend
FRONTEND_PUBLIC_URL=https://yourdomain.com

# Set to true to run DB migrations on startup
RUN_MIGRATIONS=false

# Only this email will receive the admin role on first login
ADMIN_EMAIL=admin@yourdomain.com

# Google OAuth credentials (https://console.cloud.google.com)
GOOGLE_CLIENT_ID=replace_with_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-replace_with_google_client_secret
